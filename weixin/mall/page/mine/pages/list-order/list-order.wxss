page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
button {
  margin: 0 15rpx;
  border-radius: 60rpx;
  border: solid 1px #3cc51f;
}
button[type=default]{
  color: #3cc51f;
}
.category, .kind-list-item-hd{
  border-bottom: solid 1px #ECECEC;
}
.tab-h{
    height: 80rpx;
    width: 100%; 
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    white-space: nowrap;
  }
.tab-item{
  margin:0 36rpx;
  display: inline-block;
}
.tab-item.active{
  color: #4675F9;
  position: relative;
}
.tab-item.active:after{ content: "";
display: block;
width: 52rpx;
background: #4675F9;
 }
.item-ans{ 
  width: 100%;
  display: flex; 
  flex-grow: row no-wrap;
  justify-content: space-between; 
  padding: 30rpx;
  box-sizing: border-box; 
  height: 180rpx;
  align-items: center;
  border-bottom: 1px solid #F2F2F2;}
.avatar{width: 100rpx;height: 100rpx;position: relative;padding-right: 30rpx;}
.avatar .img{width: 100%;height: 100%;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 12px;flex-grow: 2;color: #B0B0B0;line-height: 1.5em;}
.expertInfo .name{font-size: 16px;color:#000;margin-bottom: 6px;}
.askBtn{ width: 120rpx;height: 60rpx;line-height: 60rpx;text-align: center;font-size: 14px; border-radius: 60rpx;border: 1px solid #4675F9; color:#4675F9;}
.tab-content{padding-top:85rpx;}
.scoll-h{height: 100%;}

.shop-name{
  flex:1;
}
.product-img{
  width: 160rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.product-info{
  width: 100%;
}
.product-name{
  font-size: 32rpx;
}
.product-title{
  color: #999;
}
.product-price-box{
  padding-top: 30rpx;
  display: flex;
}
.product-price{
  color: #ff0000;
  font-size: 40rpx;
  flex: 1;
}
.order-ctrl-list{
  display: flex;
  padding: 20rpx;
  justify-content:flex-end;
}