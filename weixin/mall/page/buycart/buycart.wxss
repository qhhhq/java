page {
  background-color: #F8F8F8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
.shop-name{
  flex:1;
}
.message-icon{
  width: 60rpx;
  height:60rpx;
  border-radius: 60rpx;
}
.product-img{
  width: 160rpx;
  border-radius: 20rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.product-info{
  width: 100%;
}
.product-name{
  font-size: 32rpx;
}
.product-title{
  color: #999;
}
.product-price-box{
  padding-top: 30rpx;
  display: flex;
}
.product-price{
  color: #ff0000;
  font-size: 40rpx;
  flex: 1;
}
.kind-list{
  margin-bottom: 120rpx;
}
.kind-list-item-hd{
  border-bottom: solid 1px #ECECEC;
}
.buy-box{
  display: flex;
  position:fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  border-top: solid 1px #ECECEC;
}
.choose-all{
  padding: 15rpx;
}
.buycart-price{
  flex: 1;
  padding: 15rpx;
}
.buy{
  padding: 15rpx;
}