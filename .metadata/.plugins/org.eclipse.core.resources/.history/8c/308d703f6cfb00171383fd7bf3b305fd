import java.util.List;

import org.springframework.context.support.ClassPathXmlApplicationContext;

import net.qhhhq.merachant.api.MerachantService;
import net.qhhhq.model.merachant.MerachantType;

public class MerachantConsumer {

	public static void main(String[] args) {
		ClassPathXmlApplicationContext context = new ClassPathXmlApplicationContext("beans.xml");
		context.start();
        System.out.println("consumer start");
        MerachantService service = context.getBean(MerachantService.class);
        System.out.println("consumer");
        MerachantType type = new MerachantType();
        type.setId(1);
        type.setName("111");
        //service.save(type);
        Integer[] ids = new Integer[] {1};
        service.delete(ids);
        List<MerachantType> list = service.listMerachantType();
        for(MerachantType mt : list) {
        	System.out.println(mt.getId()+"==="+mt.getName());
        }
	}

}
