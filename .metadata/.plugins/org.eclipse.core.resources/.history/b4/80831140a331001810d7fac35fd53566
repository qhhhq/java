package net.qhhhq.weixin;

import java.util.HashMap;
import java.util.Map;

public class AccessToken {

	private static final String ACCESS_TOKEN = "access_token";
	private static final String ACCESS_TOKEN_URL_SUFFIX = "";
	private static Map<String, String> tokenMap = new HashMap<String, String>();

	private WXConfig config;
	private WXRequest wxRequest;

	public AccessToken(WXConfig config) {
		this.config = config;
		this.wxRequest = new WXRequest();
	}

	public String getToken() {
		String token = null;
		if (tokenMap.get(ACCESS_TOKEN) != null) {
			token = tokenMap.get(ACCESS_TOKEN);
		} else {
			try {
				String jsonToken = wxRequest.get(ACCESS_TOKEN_URL_SUFFIX, "", config.getHttpConnectTimeoutMs(),
						config.getHttpReadTimeoutMs());
			} catch (Exception e) {
				e.printStackTrace();
			}
		}
		return token;
	}

}
