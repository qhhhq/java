package net.qhhhq.utils;

import java.io.File;
import java.io.IOException;

import javax.xml.bind.JAXBContext;
import javax.xml.bind.JAXBException;
import javax.xml.bind.Unmarshaller;

import net.qhhhq.global.auth.config.AuthConfig;

public class XmlUtils {

	 /**
     * xml文件配置转换为对象
     * @param xmlPath  xml文件路径
     * @param load    java对象.Class
     * @return    java对象
     * @throws JAXBException
     * @throws IOException
     */
    public static Object xmlToBean(String xmlPath,Class<?> load) throws JAXBException, IOException{
        JAXBContext context = JAXBContext.newInstance(load);
        Unmarshaller unmarshaller = context.createUnmarshaller();
        Object object = unmarshaller.unmarshal(new File(xmlPath));
        return object;
    }

    public static void main(String[] args) {
    	String xmlPath =  "E:\\git\\resources\\qhhhq-project\\qhhhq-consumer\\resources\\auth.xml";
    	Object object = XmlUtils.xmlToBean(xmlPath,AuthConfig.class);
	}
}
